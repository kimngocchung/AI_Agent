# Dockerfile cho Kali Linux với Pentest Tools
FROM kalilinux/kali-rolling

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PIP_BREAK_SYSTEM_PACKAGES=1

# Update and install pentest tools + Python
RUN apt-get update && apt-get install -y \
    nmap \
    sqlmap \
    dirsearch \
    python3 \
    python3-pip \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy kali_listener.py
COPY kali_listener.py .

# Install Flask (bypass PEP 668 với --break-system-packages)
RUN pip3 install --no-cache-dir --break-system-packages Flask

# Expose Flask port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/ || exit 1

# Run Flask app
CMD ["python3", "kali_listener.py"]
